#include <stdio.h>

int main()
{
    int n = 0;
    //多组输入
    while (~scanf(" %d", &n))
    {
        //控制行
        for (int i = 0; i < n; i++)
        {
            //控制列
            for (int j = 0; j < n; j++)
            {
                //控制打印
                if (i == n - 1 || j == 0 || i == j)
                {
                    printf("* ");
                }
                else
                {
                    printf("  ");
                }
            }
            printf("\n");
        }
    }

    return 0;
}
