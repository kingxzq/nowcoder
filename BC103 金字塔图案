#include<stdio.h>
int main() {
    int n;
    while (scanf("%d", &n) != EOF) {
        for (int i = 0; i < n; i++) {
            //空格
            for (int g = n - 1 - i; g > 0; g--) {
                printf(" ");
            }
            //*
            for (int j = 0; j <= i; j++) {
                printf("* ");
            }
            printf("\n");
        }
    }
    return 0;
}
