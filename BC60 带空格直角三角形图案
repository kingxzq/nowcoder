#include <stdio.h>

int main() {
    int n,i,j;
    while (scanf("%d", &n) != EOF) 
    {
        for(i=0;i<n;i++)
        {
                for(j=0;j<2*(n-i)-2;j++)
                {
                        printf(" ");
                }
                for(j=n;j>=n-i;j--)
                {
                        printf("* ");
                }
                printf("\n");
        }
    }
       
    return 0;
}
